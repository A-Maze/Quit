<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amaze.quit.app" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.amaze.quit.app.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amaze.quit.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.amaze.quit.app.Setup"
            android:label="@string/title_activity_setup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.amaze.quit.app.SetupChooseProduct"
            android:label="@string/title_activity_choose_product"
            android:screenOrientation="portrait"
            android:theme="@style/BlueTheme" >
        </activity>
        <activity
            android:name="com.amaze.quit.app.Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
