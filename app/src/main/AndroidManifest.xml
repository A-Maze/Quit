<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amaze.quit.app" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme"
        >
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Setup"
            android:label="@string/title_activity_setup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SetupChooseProduct"
            android:label="@string/title_activity_choose_product"
            android:screenOrientation="portrait"
            android:theme="@style/BlueTheme" >
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/customTheme"
        >
        </activity>
        <activity
            android:name=".ProductDetail"
            android:label="@string/title_activity_product_detail"
            android:parentActivityName=".SetupChooseProduct"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ChooseProductHost"
            android:label="@string/title_activity_choose_product_host"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddSmoke"
            android:label="@string/title_activity_add_smoke"
            android:screenOrientation="portrait">
        </activity>
        <service
            android:name=".NotificationService"
            android:exported="false"/>

    </application>

</manifest>
