<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amaze.quit.app.Progress">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_progress"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="40sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv3"
        android:text="@string/dagenzonderroken"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvDagenZonderRoken"
        android:layout_marginRight="70dp"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/calendar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv4"
        android:text="@string/nietgerooktesigaretten"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvNietGerookteSigaretten"
        android:layout_marginRight="70dp"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/trophy"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv6"
        android:text="@string/bespaardegeld"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvBespaardeGeld"
        android:layout_marginRight="70dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/pig"
        android:drawablePadding="10dp"
        android:layout_gravity="right" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv8"
        android:text="@string/level"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvLevel"
        android:layout_marginRight="70dp"
        android:textSize="20sp"
        android:layout_gravity="right" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvQuitDateTitle"
        android:text="@string/extradagen"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvExtraDagen"
        android:textSize="20sp"
        android:drawableLeft="@drawable/clock"
        android:layout_marginRight="70dp"
        android:drawablePadding="10dp"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >
        <ImageButton
            android:contentDescription="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/twitter_share"
            android:src="@drawable/share_twitter"
            android:background="@null"/>

        </LinearLayout>



</LinearLayout>
