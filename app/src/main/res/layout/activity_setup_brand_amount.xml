<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amaze.quit.app.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:text="@string/smokeAmount"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

    </RadioGroup>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sigaretten"
        android:id="@+id/rbSigaretten"
        android:layout_gravity="right"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:checked="false" />

    <RadioButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/shag"
android:id="@+id/rbShag"
        android:layout_alignTop="@+id/rbSigaretten"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/setupBrand"
        android:id="@+id/textView2"
        android:layout_below="@+id/rbSigaretten"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="76dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sBrand"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/etDayAmount"
        android:layout_alignEnd="@+id/etDayAmount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/setupDayAmount"
        android:id="@+id/textView3"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/rbSigaretten"
        android:layout_alignEnd="@+id/rbSigaretten" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etDayAmount"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/rbShag"
        android:layout_alignEnd="@+id/rbShag"
        android:layout_alignLeft="@+id/rbShag"
        android:layout_alignStart="@+id/rbShag" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/setupPackAmount"
        android:id="@+id/textView4"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etPackAmount"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/etDayAmount"
        android:layout_alignStart="@+id/etDayAmount"
        android:layout_alignRight="@+id/etDayAmount"
        android:layout_alignEnd="@+id/etDayAmount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:id="@+id/bNext"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="37dp"
        android:layout_alignRight="@+id/etPackAmount"
        android:layout_alignEnd="@+id/etPackAmount"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:onClick="checkForInput"/>



</RelativeLayout>
