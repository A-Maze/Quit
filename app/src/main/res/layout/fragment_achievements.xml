                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/achievement_deep_breath_content"
                android:id="@+id/textView5"
                android:paddingTop="2dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:drawableRight="@drawable/check_mark_green""/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/achievement_kaching"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:paddingLeft="40dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/achievement_kaching_content"
                android:id="@+id/textView7"
                android:paddingTop="2dp"
                android:paddingLeft="40dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/achievement_money"
                android:id="@+id/textView8"
                android:layout_marginTop="10dp"
                android:paddingLeft="40dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/achievement_money_content"
                android:id="@+id/textView9"
                android:paddingTop="2dp"
                android:paddingLeft="40dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/achievement_extra_life"
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:paddingLeft="40dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/achievement_extra_life_content"
