<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme"></style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/GreenActionBar</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="GreenActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#7ac142</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#55acee</item>
    </style>


</resources>
