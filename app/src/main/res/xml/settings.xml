<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_user_settings">
        <Preference
            android:title="@string/pref_quit_date"
            android:summary="@string/pref_quit_date_summary"
            android:key="quitDate"/>
        <Preference
            android:title="@string/pref_quit_time"
            android:summary="@string/pref_quit_time_summary"
            android:key="quitTime"/>
        <ListPreference
            android:title="@string/pref_shag_or_sig"
            android:summary="@string/pref_shag_or_sig_summary"
            android:key="smokePreference"
            android:entries="@array/preferenceArray"
            android:entryValues="@array/preferenceArrayValues"/>
        <ListPreference
            android:title="@string/setupBrand"
            android:summary="@string/pref_brand_summary"
            android:key="brand"
            android:entries="@array/brandArray"
            android:entryValues="@array/brandArrayValues"/>
        <EditTextPreference
            android:title="@string/setupDayAmount"
            android:summary="@string/pref_day_amount_summary"
            android:key="dayAmount"/>
        <EditTextPreference
            android:title="@string/setupPackAmount"
            android:summary="@string/pref_pack_amount_summary"
            android:key="packAmount"/>
        <EditTextPreference
            android:title="@string/pref_price"
            android:summary="@string/pref_price_summary"
            android:key="price"
            />
        <Preference
            android:title="@string/pref_product"
            android:summary="@string/pref_product_summary"
            android:key="product"/>/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_app_settings">
        <ListPreference
            android:title="@string/prefered_fragment"
            android:summary="@string/pref_frag_summary"
            android:entries="@array/preferedFragment"
            android:entryValues="@array/preferedFragmentValues"
            android:key="startFrag"/>
        <Preference
            android:title="@string/pref_reset_spent"
            android:summary="@string/pref_reset_spent_summary"
            android:key="spentAmount"/>
    </PreferenceCategory>

</PreferenceScreen>